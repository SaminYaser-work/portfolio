---
import { Image } from 'astro:assets'
import type { MarkdownHeading } from 'astro'

export interface Props {
  time: string
  date: string
  heroImage?: any
  description: string
  ghUrl?: string
  liveUrl?: string
}

const { time, date, heroImage, description, ghUrl, liveUrl } = Astro.props
---

<div class={'my-3 flex justify-between flex-col md:flex-row gap-5 md:gap-0'}>
  <div>
    <p class={'dark:text-slate-300 text-lg text-oneblack'}>Samin Yaser</p>
    <span class={'text-onegrey2 dark:text-onewhite'}>{time} minute read</span>
    <span class={'text-onegrey1 dark:text-slate-300'}> Â· {date}</span>
  </div>
  <div>
    {
      ghUrl && (
        <a
          href={ghUrl}
          target="_blank"
          class="mb-2 mr-2 inline-flex items-center !rounded-lg border border-onemagenta !bg-[#24292F] px-5 py-2.5 text-center !text-sm !font-medium !text-white !no-underline hover:!bg-[#24292F]/90 focus:!outline-none focus:!ring-4 focus:!ring-[#24292F]/50 dark:hover:!bg-[#050708]/30 dark:focus:!ring-gray-500"
        >
          <svg
            class="mr-2 h-4 w-4"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
              clip-rule="evenodd"
            />
          </svg>
          View on Github
        </a>
      )
    }
    {
      liveUrl && (
        <a
          href={liveUrl}
          target="_blank"
          class="mb-2 mr-2 inline-flex items-center !rounded-lg border border-onemagenta !bg-[#24292F] px-5 py-2.5 text-center !text-sm !font-medium !text-white !no-underline hover:!bg-[#24292F]/90 focus:!outline-none focus:!ring-4 focus:!ring-[#24292F]/50 dark:hover:!bg-[#050708]/30 dark:focus:!ring-gray-500"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="mr-2 h-4 w-4"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
            />
          </svg>
          Live Demo
        </a>
      )
    }
  </div>
</div>

{
  heroImage && (
    <>
      <br />
      <Image src={heroImage} alt="test image" className={'rounded-lg'} />
      <br />
    </>
  )
}

<div class={'mt-5 md:mt-3 mb-3'}>
  <p>{description}</p>
</div>

<hr class={'h-[1px] mb-3'} />
